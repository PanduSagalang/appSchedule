<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="16dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="14dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iconTugas"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_book"
            app:tint="#FF944D" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvJudulTugas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul Tugas"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvMataKuliah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mata Kuliah"
                android:textSize="13sp"
                android:textColor="#777" />

            <TextView
                android:id="@+id/tvDeskripsiTugas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi tugas"
                android:textSize="12sp"
                android:textColor="#555"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:gravity="space_between"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tvDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 November 2025"
                    android:textSize="12sp"
                    android:textColor="#333" />

                <Button
                    android:id="@+id/btnHapus"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:text="Hapus"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_button_orange"
                    android:padding="4dp"
                    android:stateListAnimator="@null"
                    android:backgroundTint="@null" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/btnDetail"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/outline_arrow_forward_ios_24"
            app:tint="#777" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
