<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="7dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@android:color/white"
    app:strokeColor="#EAEAEA"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- ICON CIRCLE -->
        <FrameLayout
            android:id="@+id/iconCircle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/note"
                app:tint="@android:color/white"/>
        </FrameLayout>

        <!-- TITLE -->
        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Tugas Algoritma - Program game"
            android:textSize="13.5sp"
            android:textStyle="bold"
            android:textColor="#222222"
            app:layout_constraintStart_toEndOf="@id/iconCircle"
            app:layout_constraintTop_toTopOf="@id/iconCircle"
            app:layout_constraintEnd_toStartOf="@id/ivChevron"/>

        <!-- SUBTITLE -->
        <TextView
            android:id="@+id/tvTaskSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:text="Algoritma"
            android:textSize="11.5sp"
            android:textColor="#8A8A8A"
            app:layout_constraintStart_toEndOf="@id/iconCircle"
            app:layout_constraintTop_toBottomOf="@id/tvTaskTitle"
            app:layout_constraintEnd_toStartOf="@id/ivChevron"/>

        <!-- DESC -->
        <TextView
            android:id="@+id/tvTaskDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:text="Mengerjakan coding game"
            android:textSize="11.5sp"
            android:textColor="#B0B0B0"
            app:layout_constraintStart_toEndOf="@id/iconCircle"
            app:layout_constraintTop_toBottomOf="@id/tvTaskSub"
            app:layout_constraintEnd_toStartOf="@id/ivChevron"/>

        <!-- DATE -->
        <TextView
            android:id="@+id/tvTaskDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:text="12 November 2025"
            android:textSize="10.5sp"
            android:textColor="#9A9A9A"
            app:layout_constraintStart_toEndOf="@id/iconCircle"
            app:layout_constraintTop_toBottomOf="@id/tvTaskDesc" />

        <!-- CHEVRON -->
        <ImageView
            android:id="@+id/ivChevron"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/ic_media_next"
            app:tint="#C2C2C2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



        <!-- DELETE BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHapus"
            android:layout_width="62dp"
            android:layout_height="24dp"
            android:text="@string/hapus"
            android:textAllCaps="false"
            android:textSize="10.5sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/orange_primary"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_trash"
            app:iconTint="@android:color/white"
            app:iconSize="11dp"
            app:iconPadding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
